{% for model in graph.models %}
  {% for relation in model.relations %}
    {% if relation.needs_mode %}
      {{ relation.target_app }}_{{ relation.target }} [label=<
        <table bgcolor="#333366" border="1" cellborder="0" cellspacing="0">
          <tr>
            <td colspan="2" cellpadding="4" align="center" bgcolor="#333366">
              <font face='Helvetica Bold' color="#ffffff">{{ relation.target }}</font>
            </td>
          </tr>
        </table>
      >]{% endif %}
    {{ model.app_name }}_{{ model.name }} -> {{ relation.target_app }}_{{ relation.target }}
    [label="{{ relation.label }}"] {{ relation.arrows }};
  {% endfor %}
{% endfor %}
